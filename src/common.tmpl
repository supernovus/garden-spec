## Common stuff.
version 1

use globals

global VERSION

delimiters "`", "`"
indirect "[", "]"
note ";;;"
comment "<--", "-->"

syntax {[
  "st" : "{{"
  "et" : "}}"
  "sd" : "{["
  "ed" : "]}"
  "ss" : "[["
  "es" : "]]"
  "sc" : "/*"
  "ec" : "*/"
  "si" : "`"
  "ei" : "`"
  "note"  : "##"
  "cond"  : "?"
  "csep"  : ";"
  "alias" : "="
  "pos"   : "*"
  "apply" : ":"
  "neg"   : "!"
]}

