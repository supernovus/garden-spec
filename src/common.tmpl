## Common stuff.
version 1

use globals

global VERSION

delimiters "`", "`"
note ";;;"
comment "<--", "-->"

syntax {[
  "st" : "{{"
  "et" : "}}"
  "sd" : "{["
  "ed" : "]}"
  "ss" : "[["
  "es" : "]]"
  "sc" : "/*"
  "ec" : "*/"
  "note"  : "##"
  "cond"  : "?"
  "csep"  : ";"
  "alias" : "::"
  "asep"  : "="
  "pos"   : "*"
  "apply" : ":"
  "neg"   : "!"
]}

